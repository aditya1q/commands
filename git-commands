# remove git from the local machine:
Remove-Item -Recurse -Force .git

ğŸ”§ Configuration
git config --global user.name "Your Name"      # Set username
git config --global user.email "email@mail"   # Set email
git config --list                             # View config

ğŸ“ Repository
git init                # Initialize repo
git clone <url>         # Clone remote repo

ğŸ“Š Status & Info
git status              # Show working tree status â­
git status -s           # Short status
git log                 # Full commit history
git log --oneline       # Compact history â­
git show <commit>       # Show commit details

â• Staging Files
git add <file>          # Stage a file
git add .               # Stage all files â­
git add -p              # Interactive staging â­

ğŸ’¾ Commit
git commit -m "msg"     # Commit staged files â­
git commit --amend     # Edit last commit â­

ğŸ”„ Undo / Reset (IMPORTANT)
git restore <file>                 # Discard file changes
git restore --staged <file>        # Unstage file

git reset --soft HEAD~1            # Undo commit, keep files â­
git reset HEAD~1                   # Undo commit, unstage files
git reset --hard HEAD~1            # Delete commit & files â—


ğŸ§¯ Recovery
git reflog               # Show all HEAD history â­
git reset --hard <id>    # Recover lost commit


ğŸŒ¿ Branching
git branch               # List branches
git branch <name>        # Create branch
git checkout <branch>    # Switch branch
git checkout -b <name>   # Create & switch
git branch -d <name>     # Delete branch

ğŸ”€ Merge & Rebase
git merge <branch>       # Merge branch â­
git rebase <branch>      # Rebase commits
git rebase --abort       # Cancel rebase

ğŸŒ Remote
git remote -v            # View remotes
git remote add origin <url>

ğŸš€ Push & Pull
git push                 # Push commits â­
git push -u origin main  # First push
git pull                 # Fetch + merge â­
git fetch                # Fetch only

âš ï¸ Force Push
git push --force                 # Rewrite history â—
git push --force-with-lease      # Safer force push â­

ğŸ§ª Diff
git diff                # Unstaged changes
git diff --staged       # Staged changes
git diff <branch>       # Compare branches

ğŸ“¦ Stash
git stash               # Save changes â­
git stash list
git stash apply
git stash drop

ğŸ§¹ Clean
git clean -n             # Preview delete
git clean -f             # Delete untracked files

ğŸ·ï¸ Tags
git tag                  # List tags
git tag v1.0             # Create tag
git push origin v1.0     # Push tag

